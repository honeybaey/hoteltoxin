mixin date-dropdown(name)

  .date-dropdown
    .date-dropdown_wrapper
      label(for='date-dropdown_start' class='date-dropdown__label_style')
        span.icon
          //- Поменять класс на более подходящий(Черновой вариант)
      label(for='date-dropdown_end' class='date-dropdown__label_style')
        p= name
        .date-dropdown_wrapper_2
          input(id='date-dropdown_start' name='date' class='date-dropdown__input_style')
          input(id='date-dropdown_end' name='date' class='date-dropdown__input_style')