mixin date-dropdown(name)

  .date-dropdown
    .date-dropdown_wrapper
      label(for='date-dropdown_start' class='date-dropdown__label_style')
        p=name
      input(id='date-dropdown_start' readonly name='date' class='date-dropdown__input_style')
      span(class="date-dropdown_icon")
    .date-dropdown_wrapper
      label(for='date-dropdown_end' class='date-dropdown__label_style')
        p=name
      input(id='date-dropdown_end' readonly name='date' class='date-dropdown__input_style')
      span(class="date-dropdown_icon")