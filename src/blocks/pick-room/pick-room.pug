include ../date-dropdown/date-dropdown
include ../dropdown-guests/dropdown-guests
include ../btn/btn

mixin pick-room(name, classes)

  div(class=classes)
    .pick-room__wrapper
      p.pick-room__title=name
      +date-dropdown('Прибытие', 'Выезд', 'date-dropdown date-dropdown_pick-room')
      +dropdown-guests('iqdropdown_pick-room')
      +btn({
            className: 'btn btn_big',
            label: 'Подобрать номер',
          })